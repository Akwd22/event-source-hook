{
  "name": "event-source-hook",
  "version": "1.0.1",
  "description": "Easily intercept, modify, and simulate EventSource server-sent message events.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "browser": "(npm run build) && (browserify lib/browser.js -o browser/eshook.js -t [ babelify ]) && (uglifyjs browser/eshook.js -o browser/eshook.min.js)",
    "format": "prettier -w src/**/*.ts tests/**/*.ts",
    "lint": "eslint src",
    "prepare": "npm run build",
    "prepublishOnly": "(npm run test) && (npm run lint)",
    "preversion": "(npm run test) && (npm run lint)",
    "version": "(npm run format) && (npm run browser) && (git add -f -A browser)",
    "postversion": "git push"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Akwd22/event-source-hook.git"
  },
  "keywords": [
    "eventsource",
    "hook",
    "intercept",
    "modify",
    "simulate",
    "server",
    "sent",
    "message"
  ],
  "author": "Akwd22 - Eddy D. (https://github.com/Akwd22)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Akwd22/event-source-hook/issues"
  },
  "homepage": "https://github.com/Akwd22/event-source-hook#readme",
  "devDependencies": {
    "@babel/preset-env": "^7.18.10",
    "@types/jest": "^28.1.6",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "babelify": "^10.0.0",
    "browserify": "^17.0.0",
    "core-js": "^3.24.1",
    "eslint": "^8.21.0",
    "eventsource": "^2.0.2",
    "jest": "^28.1.3",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "uglify-js": "^3.16.3"
  }
}